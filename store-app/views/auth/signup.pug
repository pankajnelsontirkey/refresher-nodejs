extends ../layouts/layout.pug

block styles 
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/auth.css")

block content
  if errorMessage
    .user-message.user-message--error #{errorMessage} 
  form.login-form(action=`/signup`, method="POST" novalidate)
    .form-control 
      label(for="email") Email 
      input(
        class=`${validationErrors.find(e => e.path === 'email') ? 'invalid' : ''}`
        type="email" 
        name="email" 
        id="email" 
        value=prevInput.email
      )
    .form-control 
      label(for="password") Password 
      input(
        class=`${validationErrors.find(e => e.path === 'password') ? 'invalid' : ''}`
        type="password" 
        name="password" 
        id="password" 
        value=prevInput.password
      )
    .form-control 
      label(for="confirmPassword") Confirm Password
      input(
        class=`${validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : ''}`
        type="password" 
        name="confirmPassword" 
        id="confirmPassword" 
        value=prevInput.confirmPassword
      )
    include ../layouts/includes/csrf.pug
    
    button.btn(type="submit") Signup
